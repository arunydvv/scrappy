generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Workflow {
  id            String   @id @default(cuid())
  userId        String   
  name          String   
  description   String?

  definition    String
  status        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])

  //User can't have two workflow with same name
}
